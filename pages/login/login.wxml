<!--pages/login/login.wxml-->
<view class="container">
  <view class="login-icon">
    <image class="login-img" src="/images/login/bg.jpg"></image>
  </view>
  <view class="login-form">
  <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="/images/login/name.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="accountInput" />
    </view>
    <!--密码-->
    <view class="inputView">
      <image class="nameImage" src="/images/login/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>
    <!--按钮-->  
    <view class="loginBtnView">  
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>  
    </view>  
  </view>
</view>