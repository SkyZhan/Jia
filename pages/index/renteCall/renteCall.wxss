/* pages/index/renteCall/renteCall.wxss */
page{
  width: 100%；
}
.container{
height: 100%;
display: flex;
flex-direction: column;
padding: 0;
box-sizing: border-box;


}
.head{
width: 750rpx;
display: flex;
flex-direction: row;
padding: 15rpx 0;
background-color: #f2f2f2;
}
.routers_box{
width: 5%;
height: 40rpx;
margin-top:15rpx; 
}
.routers_icon {
width: 60rpx;
height: 35rpx;
margin-left: 10rpx;
}
.routers_icon image {
display: block;
width: 100%;
height: 100%;
}

.select_box{
background: #fff;
width: 60%;
margin-left: 10%; 
position: relative;
}
.select{
box-sizing: border-box;
width: 100%;
height: 70rpx;
border:1px solid #efefef;
border-radius: 8rpx;
display: flex;
align-items: center;
padding: 0 20rpx;
}
.select_text{
font-size: 30rpx;
flex: 1;
}
.select_img{
width: 30rpx;
height: 20rpx;
display: block;
transition:transform 0.3s;
}
.select_img_rotate{
transform:rotate(180deg); 
}
.option_box{
position: absolute;
top: 60rpx;
width: 100%;
border:1px solid #efefef;
box-sizing: border-box;
height: 0;
overflow-y: auto;
border-top: 0;
background: #fff;
transition: height 0.3s;
}
.option{
display: block;
line-height: 50rpx;
font-size: 30rpx;
border-bottom: 1px solid #efefef;
padding: 10rpx;
}
.btn_box{
  width: 25%;
  height: 40rpx;
  margin-top:5rpx; 
}
.btn_style{
  width: 90%;
  height: 60rpx;
  font-size: 26rpx;
  color: #f60100;
  border:2rpx solid #f60100;  
}

/*table*/
.history-table-wrap{
  width: 96%;
  margin-top: 10rpx;

}
/* 表格代码   */
.table{
  border:1px solid #dadada;
  border-radius:10rpx; 
  width: 100%;
  margin-bottom:10rpx; 
}
.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
}
.th,.td{
  padding:10rpx 0rpx 10rpx 20rpx;
  width: 100%;
}
.th1,.td1{
  width: 70%;
}
.th2,.td2{
  width: 30%;
}
.th{
  font-weight: 800;
  font-size: 30rpx;
  color: #330e0e;
}
.td{
  font-size: 28rpx;
  color: #ec9480;
}
.rentebtn1{
  width: 90%;
  font-size: 24rpx;
  border-radius: 25px;
  border:2rpx solid #3b5998;
  color: #3b5998;
}
.rentebtn2{
  width: 90%;
  font-size: 24rpx;
  border-radius: 25px;
  border:2rpx solid #9096a5;
  color: #9096a5; 
}
.wordcolor{
  color:#330e0e;
}